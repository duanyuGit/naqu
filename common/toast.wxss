.toast-box {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 99999;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.toast-content {
    max-width: 50%;
    max-height: 50%;
    padding: 30rpx 60rpx;
    background-color: rgba(0, 0, 0, 0.7);
    border-radius: 20rpx;
    overflow-x: hidden;
    overflow-y: scroll;
}

.toast-text {
    width: 100%;
    height: 100%;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
}
