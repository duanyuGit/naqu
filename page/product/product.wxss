page {
    height: 100%;
    overflow-y: scroll;
    font-family: PingFangSC-Light;
}

/* .noscroll {
    height: 100%;
    overflow: hidden;
} */

.product {
    width: 100%;
}

.blank {
    width: 100%;
    height: 96rpx;
}

.product swiper {
    width: 100%;
    height: 750rpx;
}

.product .swiper-imgs image {
    width: 100%;
    height: 100%;
    vertical-align: bottom;
}

.product .swiper-dots {
    width: 100%;
    height: 14rpx;
    margin-top: 32rpx;
    text-align: center;
}

.product .swiper-dots .dot {
    display: inline-block;
    width: 14rpx;
    height: 14rpx;
    vertical-align: top;
    margin-right: 18rpx;
    background-color: #bbb;
    border-radius: 14rpx;
}

.product .swiper-dots .dot.active {
    background-color: #959595;
}

.product .swiper-dots .dot:last-child {
    margin: 0;
}

.product .price {
    margin-top: 90rpx;
    text-align: center;
    color: #000;
    letter-spacing: 0;
    line-height: 38rpx;
}

.product .price .price-int {
    font-size: 38rpx;
    font-weight: bold;
}

.product .price .price-float {
    font-size: 26rpx;
    font-weight: bold;
}

.product .original-price {
    margin-top: 37rpx;
    text-decoration: line-through;
    text-align: center;
    font-size: 26rpx;
    color: #000;
    line-height: 26rpx;
}

.product .title-main {
    margin: 50rpx 65rpx 0;
    text-align: center;
    font-size: 32rpx;
    color: #000;
    line-height: 38rpx;
    vertical-align: bottom;
}

.product .title-sub {
    margin: 50rpx 65rpx 0 65rpx;
    text-align: center;
    font-size: 26rpx;
    color: #494949;
    line-height: 26rpx;
    vertical-align: bottom;
}

.product .express {
    height: 48rpx;
    margin-top: 50rpx;
    text-align: center;
    vertical-align: bottom;
}

.product .express .fee {
    display: inline-block;
    margin: 10rpx 16rpx 0 0;
    font-size: 26rpx;
    color: #494949;
    line-height: 26rpx;
    vertical-align: top;
}

.product .express .enough {
    display: inline-block;
    margin: 6rpx auto 0;
    padding: 0 8rpx;
    font-size: 25rpx;
    color: #38b8ff;
    border: 1px solid #38b8ff;
    border-radius: 10rpx;
    vertical-align: top;
    line-height: 32rpx;
}

.product .line {
    height: 2rpx;
    margin: 80rpx 40rpx 0 40rpx;
    background: #ddd;
}

.product .no-reason {
    height: 112rpx;
    margin: 0 0 0 0;
    text-align: center;
    vertical-align: top;
}

.product .no-reason text {
    display: inline-block;
    margin: 40rpx 4rpx 0 0;
    font-size: 26rpx;
    color: #494949;
    letter-spacing: 0;
    line-height: 26rpx;
    vertical-align: top;
}

.product .no-reason image {
    width: 44rpx;
    margin: 30rpx 0 0 0;
    vertical-align: top;
}

.product .imgs-other {
    width: 100%;
}

.product .imgs-other image {
    width: 100%;
    vertical-align: bottom;
}

.buy-now {
    position: fixed;
    bottom: 15rpx;
    left: 40rpx;
    right: 40rpx;
    z-index: 100;
    height: 66rpx;
    line-height: 66rpx;
    text-align: center;
    background-color: #38b8ff;
    border-radius: 36rpx;
}

.buy-disable {
    pointer-events: none;
    background-color: #c2c2c2;
}

.buy-now-bg {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 90;
    width: 100%;
    height: 96rpx;
    background-color: #f2f2f2;
}

.buy-now:active {
    background-color: #1ea1e9;
}

.buy-now .buy-now-text {
    font-size: 30rpx;
    color: #fff;
    line-height: 30rpx;
    vertical-align: middle;
}

@keyframes move {
    from {
        bottom: -500rpx; /*初始状态*/
    }

    to {
        bottom: 0; /*结尾状态*/
    }
}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background-color: #000;
    opacity: 0;
    animation: fadeIn50 1s ease forwards;
    overflow: hidden;
}

.rule {
    width: 100%;
    height: auto;
    position: fixed;
    bottom: -500rpx;
    left: 0;
    z-index: 1100;
    background-color: #fff;
    animation: move 0.3s ease forwards;
    overflow: hidden;
}

.rule .above {
    width: 100%;
}

.rule .above image {
    width: 100%;
}

.sku {
    width: 100%;
    max-height: 80%;
    min-height: 460rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1100;
    background-color: #fff;
    animation: move 0.3s ease forwards;
}

.sku .above {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: stretch;
    width: 100%;
    height: 214rpx;
}

.sku .above .left {
    flex-grow: 0;
    flex-shrink: 0;
    width: 274rpx;
    height: 214rpx;
}

.sku .above .left .wrapper {
    position: relative;
    left: 20rpx;
    top: -50rpx;
    width: 234rpx;
    height: 234rpx;
    background: #fff;
    border: 1rpx solid #ebebeb;
}

.sku .above .left .wrapper image {
    width: 224rpx;
    height: 224rpx;
    margin: 5rpx;
}

.sku .above .center {
    flex-grow: 1;
    flex-shrink: 1;
    width: auto;
    height: 214rpx;
}

.sku .above .center .price-range {
    display: inline-block;
    width: 100%;
    margin-top: 29rpx;
    font-size: 34rpx;
    color: #38b8ff;
    letter-spacing: 0;
    line-height: 34rpx;
    vertical-align: top;
}

.sku .above .center .stock {
    display: inline-block;
    width: 100%;
    margin-top: 14rpx;
    font-size: 28rpx;
    color: #333;
    letter-spacing: 0;
    line-height: 30rpx;
    vertical-align: top;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.sku .above .center .select-tips {
    font-size: 28rpx;
    color: #333;
    letter-spacing: 0;
    line-height: 34rpx;
    vertical-align: top;
}

.sku .above .right {
    flex-grow: 0;
    flex-shrink: 0;
    width: 86rpx;
    height: 214rpx;
}

.sku .above .right .close {
    width: 86rpx;
    height: 114rpx;
    text-align: right;
}

.sku .above .right .close:active {
    opacity: 0.9;
}

.sku .above .right .close image {
    width: 36rpx;
    height: 36rpx;
    margin: 16rpx 16rpx 0 0;
    vertical-align: top;
}

.sku .middle {
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: stretch;
    width: 100%;
    overflow: hidden;
}

.sku .sku-select {
    min-height: 155rpx;
    max-height: 600rpx;
    margin: 0 24rpx;
    border-top: 1rpx #ddd solid;
    vertical-align: bottom;
}

.sku .sku-select-item {
    border-bottom: 1rpx #ddd solid;
}

.sku .sku-select-item .sku-select-item-title {
    height: 82rpx;
}

.sku .sku-select-item .sku-select-item-title text {
    display: inline-block;
    margin-top: 26rpx;
    font-weight: 700;
    font-size: 28rpx;
    color: #000;
    letter-spacing: 0;
    line-height: 28rpx;
    vertical-align: top;
}

.sku .sku-select-item .sku-select-item-wrapper {
    vertical-align: top;
}

.sku .sku-select-item .sku-select-item-wrapper .each {
    display: inline-block;
    padding: 16rpx 20rpx;
    margin: 0 24rpx 20rpx 0;
    font-size: 24rpx;
    color: #333;
    letter-spacing: 0;
    line-height: 24rpx;
    background-color: #f2f2f2;
    border-radius: 32rpx;
    vertical-align: top;
}

.sku .sku-select-item .sku-select-item-wrapper .each:not(.disable):active {
    opacity: 0.6;
}

.sku .sku-select-item .sku-select-item-wrapper .each.disable {
    pointer-events: none;
    color: #999;
}

.sku .sku-select-item .sku-select-item-wrapper .each.active {
    color: #fff;
    background-color: #38b8ff;
}

.sku .sku-select .select-count {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: stretch;
    height: 124rpx;
    margin-bottom: 30rpx;
    border-bottom: 1rpx #ddd solid;
}

.sku .sku-select .select-count .left {
    line-height: 124rpx;
}

.sku .sku-select .select-count .left text {
    font-weight: 700;
    font-size: 28rpx;
    color: #000;
    letter-spacing: 0;
    line-height: 28rpx;
}

.sku .sku-select .select-count .right {
    vertical-align: middle;
}

.sku .sku-select .select-count .right .minus {
    display: inline-block;
    width: 70rpx;
    height: 70rpx;
    line-height: 70rpx;
    margin-top: 27rpx;
    text-align: center;
    font-size: 40rpx;
    color: #808080;
    background-color: #ebebeb;
    vertical-align: top;
}

.sku .sku-select .select-count .right .buy-count {
    display: inline-block;
    width: 70rpx;
    height: 70rpx;
    line-height: 70rpx;
    margin: 27rpx 4rpx 0;
    text-align: center;
    font-size: 30rpx;
    color: #333;
    background-color: #f5f5f5;
    vertical-align: top;
}

.sku .sku-select .select-count .right .plus {
    display: inline-block;
    width: 70rpx;
    height: 70rpx;
    line-height: 70rpx;
    margin-top: 27rpx;
    text-align: center;
    font-size: 40rpx;
    color: #808080;
    background-color: #ebebeb;
    vertical-align: top;
}

.sku .sku-select .select-count .right .disable {
    color: #ababab;
}

.sku .sku-select .select-count .right .able {
    color: #808080;
}

.sku .sku-select .select-count .right .minus:active,
.sku .sku-select .select-count .right .plus:active {
    color: #444;
}

.below {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    background-color: #38b8ff;
}

.below:active {
    opacity: 0.9;
}

.below text {
    font-size: 34rpx;
    color: #fff;
    letter-spacing: 0;
    line-height: 34rpx;
}
