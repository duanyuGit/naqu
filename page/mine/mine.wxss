.header {
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.header .user {
   display: flex;
   flex-flow: row nowrap;
  
}

.header .user .avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 2px solid #fee767;
   margin-left: 30rpx;
}

.header .user .info  {
  margin-left: 20rpx;
   display: flex;
  flex-direction: column;
  justify-content: center;

}


.header .user .nickname {
  font-size: 32rpx;
  color: #000;
  line-height: 46rpx;
}

.header .user .address {
    font-size: 26rpx;
    color: #999; 
}


.arrow {
  width: 21rpx;
  height: 42rpx;
  margin-right: 30rpx;
}

.section {
  padding: 0;
  color: #2e2e2e;
  font-size: 30rpx;
}

